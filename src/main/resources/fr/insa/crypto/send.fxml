<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="fr.insa.crypto.ui.controllers.SendController">
    <!-- En-tête -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="quitButton" styleClass="button-secondary" text="Retour" />
                <Label text="Nouveau message">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    
    <!-- Contenu principal -->
    <center>
        <StackPane>
            <children>
                <VBox spacing="10.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <!-- Destinataire -->
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="À :" prefWidth="80.0" />
                                <TextField fx:id="toField" HBox.hgrow="ALWAYS" promptText="Destinataire" />
                            </children>
                        </HBox>
                        
                        <!-- Séparateur -->
                        <Separator />
                        
                        <!-- Sujet -->
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Sujet :" prefWidth="80.0" />
                                <TextField fx:id="subjectField" HBox.hgrow="ALWAYS" promptText="Sujet du message" />
                            </children>
                        </HBox>
                        
                        <!-- Séparateur -->
                        <Separator />
                        
                        <!-- Corps du message -->
                        <TextArea fx:id="messageArea" VBox.vgrow="ALWAYS" promptText="Composez votre message ici..." wrapText="true" />
                        
                        <!-- Pièces jointes -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button fx:id="attachButton" styleClass="button-secondary" text="Ajouter une pièce jointe" />
                                <ProgressIndicator fx:id="attachProgress" progress="-1" visible="false" prefHeight="20.0" prefWidth="20.0" />
                                <Text fx:id="attachmentStatus" text="Aucune pièce jointe" />
                            </children>
                        </HBox>
                        
                        <!-- Bouton d'envoi -->
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <children>
                                <ProgressIndicator fx:id="sendProgress" progress="-1" visible="false" prefHeight="20.0" prefWidth="20.0" />
                                <Button fx:id="sendButton" styleClass="button-primary" text="Envoyer" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                
                <!-- Overlay de chargement global -->
                <StackPane fx:id="loadingOverlay" styleClass="spinner-overlay" visible="false">
                    <children>
                        <VBox alignment="CENTER" spacing="15">
                            <ProgressIndicator progress="-1" />
                            <Label text="Envoi en cours..." />
                        </VBox>
                    </children>
                </StackPane>
            </children>
        </StackPane>
    </center>
</BorderPane>
